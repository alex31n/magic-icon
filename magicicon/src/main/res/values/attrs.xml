<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="mi_iconColor" format="color"/>
    <attr name="mi_fontText" format="string"/>

    <attr name="mi_typeface" format="enum">
        <enum name="material_icon" value="1001"/>
        <enum name="font_awesome" value="1002"/>
        <enum name="ionicons" value="1003"/>
    </attr>

    <attr name="mi_shape" format="integer">
        <flag name="rectangle" value="101"/>
        <flag name="oval" value="102"/>
    </attr>

    <attr name="mi_focusColor" format="color"/>
    <attr name="mi_backgroundColor" format="color"/>
    <attr name="mi_disabledColor" format="color"/>
    <attr name="mi_borderColor" format="color"/>
    <attr name="mi_borderWidth" format="dimension"/>
    <attr name="mi_radius" format="dimension"/>
    <attr name="mi_enabled" format="boolean"/>

    <declare-styleable name="IconView">
        <attr name="mi_iconColor"/>
        <attr name="mi_fontText"/>
        <attr name="mi_typeface"/>
        <attr name="mi_shape"/>
        <attr name="mi_backgroundColor"/>
        <attr name="mi_borderColor"/>
        <attr name="mi_borderWidth"/>
        <attr name="mi_radius"/>
    </declare-styleable>

    <declare-styleable name="IconButton">
        <attr name="mi_iconColor"/>
        <attr name="mi_fontText"/>
        <attr name="mi_typeface"/>
        <attr name="mi_shape"/>
        <attr name="mi_focusColor"/>
        <attr name="mi_backgroundColor"/>
        <attr name="mi_disabledColor"/>
        <attr name="mi_borderColor"/>
        <attr name="mi_borderWidth"/>
        <attr name="mi_radius"/>
        <attr name="mi_enabled"/>
    </declare-styleable>
</resources>